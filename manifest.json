{
    "name": "Le Même en Mieux",
    "short_name": "LMEM",
    "version": "0.29.9",
    "manifest_version": 2,
    "description": "Quand vous consultez un produit, vous êtes alerté des meilleures alternatives. Gratuit et sans pub, respecte votre vie privée.",
    "icons": {
        "16": "images/logo-lmem-new-16.png",
        "48": "images/logo-lmem-new-48.png",
        "128": "images/logo-lmem-new-128.png"
    },
    "offline_enabled": false,
    "permissions": [
        "geolocation",
        "tabs",
        "contextMenus",
        "privacy",
        "storage",
        "unlimitedStorage",
        "webNavigation",
        "webRequest",
        "webRequestBlocking",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
      "scripts": [
          "scripts/commons.js",
          "scripts/background/background.js",
          "js/background.bundle.js"
      ]
    },
    "browser_action": {
        "default_icon": {
            "19": "images/logo-lmem-new-19.png",
            "38": "images/logo-lmem-new-38.png"
        },
        "default_title": "Le Même en Mieux",
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [{
        "matches": [
            "*://www.voyages-sncf.com/*",
            "*://proposition.voyages-sncf.com/*",
            "*://*.amazon.fr/*",
            "*://*.amazon.com/*",
            "*://livre.fnac.com/*",
            "*://www.blablacar.fr/*",
            "*://www.placedeslibraires.fr/*",
            "*://www.booking.com/*",
            "*://*.hotels.com/*"
        ],
        "js": [
            "scripts/commons.js",
            "scripts/contentScript/contentScript.js",
            "shared/analytics/lib/heap.js"
        ]
    },
		{
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"js": [
				"/js/inject.bundle.js"
			],
			"run_at": "document_end",
			"all_frames": false
		}],
    "web_accessible_resources": [
        "img/*",
        "styles/*",
        "fonts/*",
        "*/main.html",
        "shared/analytics/lib/heap.js"
    ],
    "content_security_policy": "script-src 'self' https://heapanalytics.com; object-src 'self'"
}
